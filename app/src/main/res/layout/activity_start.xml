<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="860dp"
    android:background="@drawable/img"
    tools:context="com.example.digitalkitchen.LoginRegisterProfile.StartActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/digital_kitchen_small"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/base_ek1_color"
        android:text="התחברות"
        android:layout_marginTop="450dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/_______color"/>

    <Button
        android:id="@+id/register"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/base_ek1_color"
        android:text="הרשמה"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/login"
        android:layout_marginTop="20dp"
        android:textColor="@color/_______color"/>

</RelativeLayout>
